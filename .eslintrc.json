{
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "react-hooks",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-unused-vars": "warn",
        "no-undef": "warn",
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off",
        "jsx-a11y/anchor-is-valid": "warn",
        "import/no-named-as-default": "warn",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "never"
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}